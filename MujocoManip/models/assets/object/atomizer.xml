<!-- sample of a general object defined in mujoco -->
<mujoco model="atomizer">
	<asset>
		<mesh file="meshes/atomizer.stl" name="atomizer_mesh"/>
		<texture type="cube" file="../textures/atomizer.png" name="tex-atomizer"/>
		<material name="atomizer" reflectance="0.5" texrepeat="10 20" texture="tex-atomizer" texuniform="true"/>
	</asset>
	<worldbody>
		<body>
			<body name="collision">
				<geom pos="0 0 0" mesh="atomizer_mesh" type="mesh" solimp="0.998 0.998 0.001" solref="0.001 1" density="100" friction="0.95 0.3 0.1" material="atomizer" group="1"/>
			</body>
			<body name="visual">
				<geom pos="0 0 0" mesh="atomizer_mesh" type="mesh" material="atomizer"  conaffinity="0" contype="0"  group="1"/>
			</body>
			<site pos="0 0 -0.06" name="bottom_site"/>
			<site pos="0 0 0.04" name="top_site"/>
			<site pos="0.0254 0.0254 0" name="horizontal_radius_site"/>
		</body>
	</worldbody>
</mujoco>