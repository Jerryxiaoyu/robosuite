<!-- sample of a general object defined in mujoco -->
<mujoco model="mug">
	<asset>
		<mesh file="meshes/mug.stl" name="mug_mesh" scale="0.008 0.008 0.008"/>
		<texture file="../textures/ceramic.png" name="tex-ceramic"/>
		<material name="ceramic" reflectance="0.5" texrepeat="1 1" texture="tex-ceramic" texuniform="true"/>

	</asset>
	<worldbody>
		<body>
			<body name="collision">
				<geom pos="0 0 0"  mesh="mug_mesh" type="mesh" zaxis="0 -1 0" density="1000" friction="0.5" material="ceramic" group="1"/>
			</body>
			<body name="visual">
				<geom pos="0 0 0"  mesh="mug_mesh" type="mesh" zaxis="0 -1 0" material="ceramic"  conaffinity="0" contype="0" mass="0.0001" group="1"/>
			</body>
			<site pos="0 0 0" name="bottom_site"/>
			<site pos="0 0 0.08" name="top_site"/>
			<site pos="0.03 0 0" name="horizontal_radius_site"/>
		</body>
	</worldbody>
</mujoco>