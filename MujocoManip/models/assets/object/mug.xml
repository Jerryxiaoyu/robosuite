<!-- sample of a general object defined in mujoco -->
<mujoco model="mug">
	<asset>
		<mesh file="meshes/mug.stl" name="mug_mesh" scale="0.01 0.01 0.01"/>
	</asset>
	<worldbody>
		<body>
			<body name="collision">
				<geom pos="0 0 0"  mesh="mug_mesh" type="mesh" zaxis="0 -1 0" rgba="1 0 0 1" group="1"/>
			</body>
			<body name="visual">
				<geom pos="0 0 0"  mesh="mug_mesh" type="mesh" zaxis="0 -1 0" rgba="1 0 0 1"  conaffinity="0" contype="0" mass="0.0001" group="1"/>
			</body>
			<site pos="0 0 0" name="bottom_site"/>
			<site pos="0 0 0.1" name="top_site"/>
			<site pos="0.07 0 0" name="horizontal_radius_site"/>
		</body>
	</worldbody>
</mujoco>