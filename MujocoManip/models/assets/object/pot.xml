<!-- sample of a general object defined in mujoco -->
<mujoco model="pot">
	<asset>
		<mesh file="meshes/pot.stl" name="pot_mesh" scale="0.0005 0.0005 0.0005"/>
		<texture file="../textures/clay.png" name="tex-clay"/>
		<material name="clay" reflectance="0.5" texrepeat="1 1" texture="tex-clay" texuniform="true"/>

	</asset>
	<worldbody>
		<body>
			<body name="collision">
				<geom pos="0 0 0" mesh="pot_mesh" density="1000" friction="0.5" type="mesh" material="clay" group="1"/>
			</body>
			<body name="visual">
				<geom pos="0 0 0" mesh="pot_mesh" type="mesh" material="clay"  conaffinity="0" contype="0" group="1"/>
			</body>
			<site pos="0 0 0" name="bottom_site"/>
			<site pos="0 0 0.05" name="top_site"/>
			<site pos="0.045 0 0" name="horizontal_radius_site"/>
		</body>
	</worldbody>
</mujoco>