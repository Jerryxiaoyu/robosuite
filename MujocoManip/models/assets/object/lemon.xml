<!-- sample of a general object defined in mujoco -->
<mujoco model="lemon">
	<asset>
		<mesh file="meshes/lemon.stl" name="lemon_mesh" scale="1.5 1 1"/>
		<texture file="../textures/metal.png" type="2d" name="tex-metal"/>
		<material name="metal" reflectance="0.7" texrepeat="1 1" texture="tex-metal" texuniform="true"/>
	</asset>
	<worldbody>
		<body>
			<body name="collision">
				<geom pos="0 0 0" mesh="lemon_mesh" type="mesh" solimp="0.998 0.998 0.001" solref="0.001 1" density="50" friction="0.95 0.3 0.1"  rgba="1 1 0 1" group="1" condim="4"/>
			</body>
			<body name="visual">
				<geom pos="0 0 0" mesh="lemon_mesh" type="mesh" rgba="1 1 0 1"  conaffinity="0" contype="0"  group="0" mass="0.0001"/>
				<geom pos="0 0 0" mesh="lemon_mesh" type="mesh" rgba="1 1 0 1"  conaffinity="0" contype="0"  group="1" mass="0.0001"/>
			</body>
			<site pos="0 0 -0.035" name="bottom_site"/>
			<site pos="0 0 0.02" name="top_site"/>
			<site pos="0.025 0.02 0" name="horizontal_radius_site"/>
		</body>
	</worldbody>
</mujoco>