<!-- sample of a general object defined in mujoco -->
<mujoco model="camera">
  <asset>
    <mesh file="meshes/camera.stl" name="camera_mesh" scale="0.6 0.6 0.6"/>
    <texture file="../textures/dark-wood.png" name="tex-cam"/>
    <material name="cam" reflectance="0.4" texrepeat="1 1" texture="tex-cam" texuniform="true"/>
  </asset>
  <worldbody>
    <body>
      <body name="collision">
        <geom pos="0 0 0" mesh="camera_mesh" type="mesh" solimp="0.998 0.998 0.001" solref="0.001 1" density="50" friction="0.95 0.3 0.1" material="cam" group="1"/>
      </body>
      <body name="visual">
        <geom pos="0 0 0" mesh="camera_mesh" type="mesh" material="cam"  conaffinity="0" contype="0"  group="0"/>
        <geom pos="0 0 0" mesh="camera_mesh" type="mesh" material="cam"  conaffinity="0" contype="0"  group="1"/>
      </body>
      <site pos="0 0 -0.045" name="bottom_site"/>
      <site pos="0 0 0.03" name="top_site"/>
      <site pos="0.03 0.005 0" name="horizontal_radius_site"/>
    </body>
  </worldbody>
</mujoco>