<!-- sample of a general object defined in mujoco -->
<mujoco model="bottle">
	<asset>
		<mesh file="meshes/bottle.stl" name="bottle_mesh" scale="0.002 0.002 0.002"/>
		<texture file="../textures/glass.png" name="tex-glass"/>
		<material name="glass" reflectance="0.5" texrepeat="1 1" texture="tex-glass" texuniform="true"/>
	</asset>
	<worldbody>
		<body>
			<body name="collision">
				<geom pos="0 0 0" mesh="bottle_mesh" type="mesh" zaxis="-1 0 0" density="1000" friction="0.5"  material="glass" group="1"/>
			</body>
			<body name="visual">
				<geom pos="0 0 0" mesh="bottle_mesh" type="mesh" zaxis="-1 0 0" material="glass"  conaffinity="0" contype="0"  group="1"/>
			</body>
			<site pos="0 0 0.0" name="bottom_site"/>
			<site pos="0 0 0.1" name="top_site"/>
			<site pos="0.03 0 0" name="horizontal_radius_site"/>
		</body>
	</worldbody>
</mujoco>