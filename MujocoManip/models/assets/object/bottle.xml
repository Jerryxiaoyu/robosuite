<!-- sample of a general object defined in mujoco -->
<mujoco model="bottle">
	<asset>
		<mesh file="meshes/bottle.stl" name="mesh"/>
	</asset>
	<worldbody>
		<body name="collision">
			<geom pos="0 0 0" size="0.1" mesh="mesh" type="mesh" rgba="1 0 0 1"/>
		</body>
		<body name="visual">
			<geom pos="0 0 0" size="0.1" mesh="mesh" type="mesh" rgba="1 0 0 1"  conaffinity="0" contype="0" mass="0.0001" group="1"/>
		</body>
	</worldbody>
</mujoco>