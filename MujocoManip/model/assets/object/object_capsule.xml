<!-- sample of a general object defined in mujoco -->
<mujoco model="capsule">
    <worldbody>
        <body>
            <!-- Size = Radius of capsule, Half-height of cylinder -->
            <geom pos="0 0 0" size="0.05 0.08" type="capsule" rgba="1 0 0 1"/>
            <!-- These sites are for stacking objects, for aligning objects on a table for example. -->
            <site pos="0 0 -0.13" name="bottom_site"/>
            <site pos="0 0 0.13" name="top_site"/>
            <site pos="0.05 0 0" name="horizontal_radius_site"/>
            <site pos="0 0 0" name="main_site"/>
        </body>
    </worldbody>
</mujoco>