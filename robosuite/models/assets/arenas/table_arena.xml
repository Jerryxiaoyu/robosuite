<mujoco model="table_arena">
  <asset>
    <texture height="256" file="../textures/dark-wood.png"  type="skybox" width="256"/>
    <texture builtin="flat" height="512" name="texplane" rgb1="1 1 1" rgb2="1 1 1" type="2d" width="512"/>
    <texture builtin="flat" height="512" name="textable" width="512" rgb1="0.6 0.6 0.6"/>


    <texture file="../textures/light-wood.png" type="2d" name="tex-light-wood"/>
    <texture file="../textures/dark-wood.png" type="2d" name="tex-dark-wood"/>
    <material name="light-wood" reflectance="0.5" texrepeat="15 15" texture="tex-light-wood" texuniform="true"/>
    <material name="dark-wood" reflectance="0.5" texrepeat="5 5" texture="tex-dark-wood" texuniform="true"/>
    <material name="floorplane" reflectance="0.5" texrepeat="1 1" texture="texplane" texuniform="true"/>

    <material name="floorplane" texture="tex-dark-wood"/>
    <material name="table_mat" texture="tex-dark-wood" />

  </asset>
  <worldbody>
    <geom condim="3" material="floorplane" name="floor" pos="0 0 0" size="0.5 0.5 .125" type="plane"/>
    <body name="table" pos="0 0 0.4">
      <geom pos="0 0 0" size="0.4 0.4 0.4" type="box" name="table_collision" material="table_mat" friction="1 0.005 0.0001" />
      <geom pos="0 0 0" size="0.4 0.4 0.4" type="box" conaffinity="0" contype="0" group="1" name="table_visual" material="table_mat" />
      <!-- TODO: .18 here? -->
      <site pos="0 0 0.4" name="table_top" size="0.001 0.001 0.001" rgba="0 0 0 0"/>
    </body>

    <light name="light1" diffuse=".8 .8 .8" directional="false" pos="-2. 0. 5." specular="0.7 0.7 0.7" castshadow="false" cutoff="45"/>
    <light name="light2" diffuse="1 1 1" dir="0 -.15 -1" directional="false" pos="-3. 0. 4.0" specular="0.3 0.3 0.3" castshadow="false"/>

    <!-- Lights for domain randomization -->
    <!-- TODO: Figure out why active tag does not change on randomization -->
    <!-- TODO: These are needed for domain randomization but bad for sim2real (weird shadows) -->
    <light name="light3" diffuse=".8 .8 .8" dir="0 .15 -0.05" directional="false" pos="0. 0. 2.0" specular="0.3 0.3 0.3" castshadow="false"/>
    <light name="light4" diffuse=".8 .8 .8" dir="0 .2 -0.02" directional="false" pos="0. 0. 4.0" specular="0.3 0.3 0.3" castshadow="false"/>
    <light name="light5" diffuse=".8 .8 .8" dir="0 .15 1" directional="false" pos="1. 0. 3.0" specular="0.3 0.3 0.3" castshadow="false"/>
    <light name="light6" diffuse=".8 .8 .8" dir="0 .15 0" directional="false" pos="1. 2. 3.0" specular="0.3 0.3 0.3" castshadow="false"/>
    <light name="light7" diffuse=".8 .8 .8" dir=".15 -.15 -1" directional="false" pos="-1. -1. 4.0" specular="0.3 0.3 0.3" castshadow="false"/>

    <!-- front view -->
    <camera mode="fixed" name="frontview" pos="1.6 0 1.45" quat="0.56 0.43 0.43 0.56"/>
    <!-- bird view -->
    <camera mode="fixed" name="birdview" pos="-0.2 0 3.0" quat="0.7071 0 0 0.7071"/>
    <!-- agent view -->
    <!-- TODO: Adjust camera to match real world view -->
    <!--<camera mode="fixed" name="agentview" pos="0.5 0 1.35" quat="0.653 0.271 0.271 0.653"/>-->
    <camera mode="fixed" name="agentview" pos="0.4 0.027181233231036377 1.2014" quat="0.6327776 0.3155829 0.3155829 0.6327776" fovy="45"/>
  </worldbody>
</mujoco>
